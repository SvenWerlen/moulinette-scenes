<form autocomplete="off" onsubmit="event.preventDefault();">
  <div class="body">
    <h3>{{pretty asset.data.name}} <small>({{filename}})</small></h3>
    <div class="scene">
      {{#unless asset.isVideo}}
        {{#if pack.isRemote}}
          <img id="previewImage" width="100%" height="100%" src="{{previewImage}}" />
        {{else}}
          <img id="previewImage" width="100%" height="100%" src="{{assetURL}}" />
        {{/if}}
      {{/unless}}
      {{#if asset.isVideo}}
        <video id="previewImage" width="100%" height="100%" autoplay loop muted>
          <source src="{{assetURL}}{{asset.sas}}" type="video/webm">
          Your browser does not support the video tag.
        </video>
      {{/if}}
    </div>
    <div class="infos">
      <p>
        <i>Search provided by <a href="https://www.patreon.com/moulinette">Moulinette</a>. {{#if isScenePacker}}Built with <a href="https://github.com/League-of-Foundry-Developers/scene-packer" target="_blank">ScenePacker</a>.{{/if}}</i>
      </p>
      {{#if pack.pubWebsite}}
      <p>
        {{localize "mtte.imageFrom"}} <a href="{{pack.pubWebsite}}" target="_blank">{{pack.publisher}}</a> (<a href="{{pack.url}}" target="_blank">{{pack.name}}</a>)
      </p>
      {{/if}}
      {{#unless pack.pubWebsite}}
      <p>
        {{localize "mtte.imageFrom"}} {{pack.publisher}} ({{pack.name}})
      </p>
      {{/unless}}
    </div>
    <footer>
      <div class="actions">
        <!--<button class="clipboard" title="{{localize "mtte.clipboardImageToolTip"}}"><i class="fas fa-clipboard"></i> {{localize "mtte.clipboardImage"}}</button>-->
        <button class="importScene" title="{{localize "mtte.importSceneToolTip"}}"><i class="fas fa-map"></i> {{localize "mtte.importScene"}}</button>
        <button class="createArticle" title="{{localize "mtte.createArticleToolTip"}}"><i class="fas fa-book-open"></i> {{localize "mtte.createArticle"}}</button>
        <div class="option">
          <input type="checkbox" id="forceOverwrite" name="force" value="Overwrite" title="{{localize "mtte.forceOverwriteTooltip"}}">
          <label for="forceOverwrite" title="{{localize "mtte.forceOverwriteTooltip"}}"> {{localize "mtte.forceOverwrite"}}</label>
        </div>
      </div>
    </footer>
  </div>
</form>
